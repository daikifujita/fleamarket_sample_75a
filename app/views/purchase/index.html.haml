%main.buy-main 
  = form_with url: buy_product_path, method: :post, local: true do |f| 
    = f.submit "購入する", class:"purchase" 
    .buy-item-container
      %h2.buy-item-head 購入内容の確認
      %section.buy-content.buy-item
        .buy-content-inner
          .buy-item-box
            .buy-item-image
              -# =image_tag @pictures.image, class:"buy-image"
            .buy-item-detail
              %p.buy-item-name
                =@product.name
                %p.buy-item-price.bold
                  = number_to_currency(@product.price,format: "%u%n",unit:"¥",precision: 0)   #通過フォーマットの扱い方参照
                  %span.item-shipping-fee.f14.bold
                    (税込)送料込み
      %section.buy-content.buy-user-info
        .buy-content-inner
          %ul.buy-price-table
            %li.buy-price-row.buy-you-pay.bold
            %li.buy-price-cell 支払い金額
            %li.buy-price-cell
              = number_to_currency(@product.price,format: "%u%n",unit:"¥",precision: 0) 
          %section.buy-content.buy-user-info
        .buy-content-inner
          %h3 支払方法
          .payment-content__creditcards__list
            %figure
              = image_tag "credit_brand/#{@card_src}",width: '34', height: '20', alt: @card_brand, id: "card_image"
            .payment-content__creditcards__list__number
              = "**** **** **** " + @card_information.last4
            .payment-content__creditcards__list__number
              - exp_month = @card_information.exp_month.to_s
              - exp_year = @card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
          %section.buy-content.buy-user-info
        .buy-content-inner
          %h3 配送先
          %address.buy-user-info-text
            =@address.postcode
            %br
            =@address.prefecture_id
            %br
            =@address.city
            =@address.street
            =@address.building
            %br
            =@user.last_name
            =@user.first_name
          %section.buy-content.buy-user-info
            = f.submit "購入する", class:"purchase"
